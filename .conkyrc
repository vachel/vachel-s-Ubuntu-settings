background                    no
update_interval               1.0

font                          文泉驿正黑:size=9
double_buffer                 yes

use_xft                       yes
xftalpha                      0.8

own_window                    yes
own_window_transparent        yes
own_window_type               override
own_window_hints          undecorated,below,sticky,skip_taskbar,skip_pager
#on_bottom              yes

minimum_size              160 5
maximum_width                 250
draw_shades                  no
draw_outline              no
draw_borders              no
draw_graph_borders          no
stippled_borders          0
#border_margin              3
border_width              0




default_color                 F3E2A4
default_shade_color           black
default_outline_color         green

alignment                     top_right
gap_x                         5
gap_y                         -7

no_buffers                    yes

uppercase                     no


